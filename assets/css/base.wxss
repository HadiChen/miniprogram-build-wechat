/* 重置样式 */

canvas,
i,
li,
video {
  padding: 0;
  margin: 0;
  border: 0;
  -webkit-tap-highlight-color: rgba(255, 0, 0, 0);
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  font-family: PingFangSC-Regular, '思源黑体', Noto SansCJK, Roboto,
    PingFangSC-Medium, Helvetica, sans-serif, Helvetica, Microsoft Yahei,
    Hiragino Sans GB, WenQuanYi Micro Hei, sans-serif;
  word-break:break-all;
  word-wrap:break-word;
}

page {
  background: #f5f5f5;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.clearfix:before,
.clearfix:after {
  display: table;
  line-height: 0;
  content: '';
}

.clearfix:after {
  clear: both;
}

button {
  outline: 0;
  border: 0;
  background: transparent;
  padding: 0;
  width: initial;
}

input:focus {
  outline: none;
}

input {
  outline: none;
  border: 0;
  outline: none;
  background: none;
  border-radius: 0;
  -webkit-appearance: none;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.v-modal {
  opacity: 1 !important;
  background: rgba(51, 51, 51, 0.2) !important;
}

/*flex布局*/

.flex-wrap {
  display: flex;
  flex-wrap: wrap;
}

.flex-flow {
  display: flex;
  flex-flow: wrap;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.flex-center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.text-align {
  display: flex;
  text-align: center;
  justify-content: center;
}

.justify-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.space-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.mint-msgbox-btn {
  font-size: 16px;
}

.select-none {
  /* -webkit-touch-callout: none; */
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

/* 我的企业公用的样式*/

.company-btn {
  display: block;
  width: rem(710px);
  height: rem(88px);
  line-height: rem(88px);
  text-align: center;
  border-radius: rem(8px);
  background-color: #e74322;
  font-size: rem(36px);
  color: #fff;
  font-family: PingFangSC-Regular;
  margin: rem(120px) auto rem(80px);
}

.company-title {
  justify-content: space-between;
  height: rem(88px);
  line-height: rem(88px);
  background-color: #fff;
  padding: 0 rem(20px) 0 rem(32px);
  border-bottom: rem(4px) solid #ebebeb;
}

.company-title__icon {
  font-size: rem(40px);
  color: #757575;
  font-weight: bold;
}

.company-title__text {
  font-size: rem(36px);
  color: #353535;
}

.company-title__right {
  width: rem(50px);
}

.company-title__tabCompany {
  color: #333;
}

.btn-disabled {
  background-color: #ccc !important;
  background-image: none !important;
}

/* 文字超出一行显示... */
.text-over {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Message box内容超出强制换行 */
.mint-msgbox-message {
  word-wrap: break-word;
  white-space: pre-wrap;
}
._scroll-view {
  -webkit-overflow-scrolling: touch;
}
.break-wrap{
  word-break:break-all;
  word-wrap:break-word;
}