@import '../../../assets/css/border-box.wxss';

.icon-nav {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
}

.icon-image {
  width: 90rpx;
  height: 90rpx;
  overflow: hidden;
  border-radius: 20rpx;
  margin: 0 auto;
}

.icon-image__image {
  width: 100%;
  height: 100%;
  display: block;
}
.icon-text {
  font-size: 28rpx;
  color: #757575;
  text-align: center;
  line-height: 40rpx;
  margin-top: 20rpx;
  overflow: hidden;
  width: 100%;
  white-space: nowrap;
}

.icon-row {
  padding: 0 20rpx;
}
